<!DOCTYPE html>
<html lang="{{ lang }}"> <!-- Establecer el idioma de la página -->
<head>
    <meta charset="UTF-8"> <!-- Establecer la codificación de caracteres -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Configurar la vista para dispositivos móviles -->
    <title>Login</title> <!-- Título de la página -->
    <!-- Vincular CSS de Bootstrap desde la carpeta bootstrap -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Vincular CSS de Bootstrap 5 desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container mt-5"> <!-- Contenedor principal con margen superior -->
    <div class="d-flex justify-content-between"> <!-- Botones para cambiar de idioma -->
            <a href="?lang=es" class="btn btn-primary">Español</a>
            <a href="?lang=en" class="btn btn-primary">Inglés</a>
        </div>
        <div class="row justify-content-center"> <!-- Fila centrada -->
            <div class="col-md-6"> <!-- Columna de tamaño medio -->
                {% if session.error %} <!-- Mostrar mensaje de error si existe -->
                <div class="alert alert-danger text-center" role="alert">
                    {{ session.error }}
                </div>
                {% endif %}
                <div class="card"> <!-- Tarjeta para el formulario de login -->
                    <div class="card-header text-center"> <!-- Encabezado de la tarjeta -->
                        <h4>Iniciar sesión</h4>
                    </div>
                    <div class="card-body"> <!-- Cuerpo de la tarjeta -->
                        <!-- Formulario de login -->
                        <form action="" method="post"> <!-- Formulario de inicio de sesión -->
                            <div class="form-group"> <!-- Grupo de formulario para el nombre de usuario -->
                                <label for="username">Usuario</label>
                                <input type="text" id="username" name="username" class="form-control" required>
                            </div>
                            <div class="form-group mt-3"> <!-- Grupo de formulario para la contraseña -->
                                <label for="password">Contraseña</label>
                                <input type="password" id="password" name="password" class="form-control" required>
                            </div>
                            <div class="form-group mt-3 form-check"> <!-- Grupo de formulario para recordar usuario -->
                                <input type="checkbox" id="remember_me" name="remember_me" class="form-check-input">
                                <label class="form-check-label" for="remember_me">Recordarme</label>
                            </div>
                            <div class="form-group mt-4 text-center"> <!-- Botón de envío del formulario -->
                                <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                            </div>
                        </form>
                        <div class="form-group mt-3 text-center"> <!-- Enlace para registrarse si no tiene cuenta -->
                            <p>¿Ya tienes cuenta?</p>
                            <a href="register" class="btn btn-primary">Regístrate</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vincular JS de Bootstrap desde la carpeta bootstrap -->
    <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>