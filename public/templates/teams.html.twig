{% extends 'base.html.twig' %}

{% block title %}Equipos - Fastscore{% endblock %}

{% block content %}
<h1 class="section-title">
    <i class="fas fa-users"></i> Equipos
</h1>

<div class="row">
    {% for team in teams %}
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header text-center py-3 bg-primary text-white">
                <h5 class="card-title mb-0 text-white">
                    {% if team.escudo_image %}
                    <img src="{{ team.escudo_image }}" alt="Escudo {{ team.club_name }}" class="me-2" style="max-height: 40px; vertical-align: middle;">
                    {% endif %}
                    {{ team.club_name }}
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    {% if team.logo_url %}
                    <img src="{{ team.logo_url }}" alt="Logo {{ team.club_name }}" 
                         class="img-fluid" style="max-height: 100px;">
                    {% endif %}
                </div>
                
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-calendar text-primary me-2"></i> Fundado en</span>
                        <span class="badge bg-primary rounded-pill">{{ team.foundation_year }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-trophy text-primary me-2"></i> Liga</span>
                        <span>{{ team.league }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user-tie text-primary me-2"></i> Presidente</span>
                        <span>{{ team.president }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user text-primary me-2"></i> Entrenador</span>
                        <span>{{ team.coach }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-home text-primary me-2"></i> Estadio</span>
                        <span>{{ team.stadium_name }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-users text-primary me-2"></i> Capacidad</span>
                        <span class="badge bg-secondary rounded-pill">{{ team.stadium_capacity }}</span>
                    </li>
                </ul>
            </div>
            <div class="card-footer text-center">
                <a href="{{ team.website }}" class="btn btn-primary" target="_blank">
                    <i class="fas fa-external-link-alt me-1"></i> Visitar Web
                </a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %} 