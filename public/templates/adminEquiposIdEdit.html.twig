{% extends 'base.html.twig' %}

{% block title %}Editar Equipo - Fastscore{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0">
        <i class="fas fa-edit"></i> Editar Equipo
    </h1>
    
    <a href="javascript:history.back()" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i> Volver
    </a>
</div>

<!-- Navigation Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/adminDashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/adminEquipos">Equipos</a></li>
        <li class="breadcrumb-item"><a href="/adminEquiposId/details/{{ team.id }}">{{ team.club_name }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Editar</li>
    </ol>
</nav>

<div class="row">
    <!-- Team Preview Card -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header text-center py-3 bg-primary text-white">
                <h5 class="card-title mb-0">
                    {% if team.escudo_image %}
                    <img src="{{ team.escudo_image }}" alt="Escudo {{ team.club_name }}" class="me-2" style="max-height: 40px; vertical-align: middle;">
                    {% endif %}
                    {{ team.club_name }}
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    {% if team.stadium_image %}
                    <img src="{{ team.stadium_image }}" alt="Estadio {{ team.club_name }}" 
                         class="img-fluid" style="max-height: 120px;">
                    {% endif %}
                </div>
                
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-id-badge text-primary me-2"></i> ID</span>
                        <span class="badge bg-primary rounded-pill">{{ team.id }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-calendar text-primary me-2"></i> Fundado en</span>
                        <span>{{ team.foundation_year }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-trophy text-primary me-2"></i> Liga</span>
                        <span>{{ team.league_name }}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="col-md-8 mb-4">
        <div class="card h-100">
            <div class="card-header py-3 bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="fas fa-pen me-2"></i>Formulario de Edición
                </h5>
            </div>
            <div class="card-body">
                <form method="post" action="/adminEquiposId/edit/{{ team.id }}" class="row g-3">
                    <input type="hidden" name="id" value="{{ team.id }}">

                    <div class="col-md-6">
                        <label for="club_name" class="form-label">Nombre del Club</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-futbol"></i></span>
                            <input type="text" class="form-control" id="club_name" name="club_name" value="{{ team.club_name }}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="league_name" class="form-label">Liga</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-trophy"></i></span>
                            <input type="text" class="form-control" id="league_name" name="league_name" value="{{ team.league_name }}">
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label for="foundation_year" class="form-label">Fundado en</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                            <input type="text" class="form-control" id="foundation_year" name="foundation_year" value="{{ team.foundation_year }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="president" class="form-label">Presidente</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                            <input type="text" class="form-control" id="president" name="president" value="{{ team.president }}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="coach" class="form-label">Entrenador</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" id="coach" name="coach" value="{{ team.coach }}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="stadium_name" class="form-label">Estadio</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-home"></i></span>
                            <input type="text" class="form-control" id="stadium_name" name="stadium_name" value="{{ team.stadium_name }}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="stadium_capacity" class="form-label">Capacidad del Estadio</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-users"></i></span>
                            <input type="number" class="form-control" id="stadium_capacity" name="stadium_capacity" value="{{ team.stadium_capacity }}">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <label for="stadium_address" class="form-label">Dirección del Estadio</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <input type="text" class="form-control" id="stadium_address" name="stadium_address" value="{{ team.stadium_address }}">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <label for="website" class="form-label">Sitio Web</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-globe"></i></span>
                            <input type="url" class="form-control" id="website" name="website" value="{{ team.website }}">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <label for="url" class="form-label">URL Oficial</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-link"></i></span>
                            <input type="url" class="form-control" id="url" name="url" value="{{ team.url }}">
                        </div>
                    </div>

                    <div class="col-12 text-end mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
