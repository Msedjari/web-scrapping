{% extends 'base.html.twig' %}

{% block title %}Equipos - Fastscore{% endblock %}

{% block content %}
<!-- Título principal de la página con un icono -->
<h1 class="mb-4"><i class="fas fa-users"></i>Editar Equipo</h1>

<div class="d-flex justify-content-between">
    <!-- Botón para volver atrás -->
    <a href="javascript:history.back()" class="btn btn-secondary btn-sm mt-3">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="row">
    <!-- Mostrar el equipo según el ID seleccionado -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <!-- Mostrar el logo del equipo si está disponible -->
                {% if team.logo_url %}
                <img src="{{ team.logo_url }}" alt="Logo {{ team.club_name }}" 
                     class="img-fluid mb-3" style="max-height: 100px;">
                {% endif %}
                <!-- Mostrar el nombre del equipo con una imagen -->
                <h5 class="card-title"><img src="{{ team.escudo_image }}" alt="Escudo {{ team.club_name }}" style="max-height: 50px;">{{ team.club_name }}</h5>
                <!-- Lista de detalles del equipo -->
                <ul class="list-unstyled text-start">
                    <li><i class="fas fa-id-badge"></i> ID del Equipo: {{ team.id }}</li>
                    <li><i class="fas fa-calendar"></i> Fundado en {{ team.foundation_year }}</li>
                    <li><i class="fas fa-trophy"></i> Liga: {{ team.league }}</li>
                    <li><i class="fas fa-user-tie"></i> Presidente: {{ team.president }}</li>
                    <li><i class="fas fa-user"></i> Entrenador: {{ team.coach }}</li>
                    <li><i class="fas fa-home"></i> Estadio: {{ team.stadium_name }}</li>
                    <li><i class="fas fa-users"></i> Capacidad: {{ team.stadium_capacity }}</li>
                    <li><i class="fas fa-map-marker-alt"></i> Dirección: {{ team.stadium_address }}</li>
                </ul>
                <!-- Enlace al sitio web del equipo -->
                <a href="{{ team.website }}" class="btn btn-primary btn-sm" target="_blank">
                    <i class="fas fa-external-link-alt"></i> Visitar Web
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario para editar los detalles del equipo -->
    <div class="col-md-8 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <form method="post" action="/adminEquiposId/edit/{{ team.id }}">
                    <div class="mb-3">
                        <label for="club_name" class="form-label">Nombre del Club</label>
                        <input type="text" class="form-control" id="club_name" name="club_name" value="{{ team.club_name }}" >
                    </div>
                    <div class="mb-3">
                        <label for="league" class="form-label">Liga</label>
                        <input type="text" class="form-control" id="league" name="league" value="{{ team.league }}" >
                    </div>
                    <div class="mb-3">
                        <label for="president" class="form-label">Presidente</label>
                        <input type="text" class="form-control" id="president" name="president" value="{{ team.president }}" >
                    </div>
                    <div class="mb-3">
                        <label for="coach" class="form-label">Entrenador</label>
                        <input type="text" class="form-control" id="coach" name="coach" value="{{ team.coach }}" >
                    </div>
                    <div class="mb-3">
                        <label for="stadium_name" class="form-label">Estadio</label>
                        <input type="text" class="form-control" id="stadium_name" name="stadium_name" value="{{ team.stadium_name }}" >
                    </div>
                    <div class="mb-3">
                        <label for="stadium_capacity" class="form-label">Capacidad del Estadio</label>
                        <input type="number" class="form-control" id="stadium_capacity" name="stadium_capacity" value="{{ team.stadium_capacity }}" >
                    </div>
                    <div class="mb-3">
                        <label for="stadium_address" class="form-label">Dirección del Estadio</label>
                        <input type="text" class="form-control" id="stadium_address" name="stadium_address" value="{{ team.stadium_address }}" >
                    </div>
                    <div class="mb-3">
                        <label for="website" class="form-label">Sitio Web</label>
                        <input type="url" class="form-control" id="website" name="website" value="{{ team.website }}" >
                    </div>
                    <input type="hidden" name="id" value="{{ team.id }}">
                    <button type="submit" class="btn btn-success">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %} 